#!/usr/bin/env bash
# Manages the script manage_my_process.

PID_FILE="/var/run/my_process.pid"

if [ "$1" == "start" ]; then
    if [ -f "$PID_FILE" ]; then
        echo "Error: manage_my_process is already running."
        exit 1
    fi
    ./manage_my_process &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"

elif [ "$1" == "stop" ]; then
    if [ ! -f "$PID_FILE" ]; then
        echo "Error: manage_my_process is not running."
        exit 1
    fi
    kill "$(cat "$PID_FILE")"
    rm "$PID_FILE"
    echo "manage_my_process stopped"

elif [ "$1" == "restart" ]; then
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")"
        rm "$PID_FILE"
    fi
    ./manage_my_process &
    echo $! > "$PID_FILE"
    echo "manage_my_process restarted"

else
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
fi
