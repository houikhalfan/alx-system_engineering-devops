#!/usr/bin/env bash
# Manages the script manage_my_process.

PID_FILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"

if [ "$1" == "start" ]; then
    if [ -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is already running."
        exit 1
    fi
    ./manage_my_process &
    echo $! > "$PID_FILE"
    echo "$PROCESS_NAME started"

elif [ "$1" == "stop" ]; then
    if [ ! -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is not running."
        exit 1
    fi
    kill "$(cat "$PID_FILE")"
    rm "$PID_FILE"
    echo "$PROCESS_NAME stopped"

elif [ "$1" == "restart" ]; then
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")"
        rm "$PID_FILE"
    fi
    ./manage_my_process &
    echo $! > "$PID_FILE"
    echo "$PROCESS_NAME restarted"

else
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
fi
